
@model List<Yorumlar>

<div class="comments mt-5">
    <h4 class="side-title ">Yorumlar(@ViewBag.yorumsayısı)</h4>

    @foreach (var item in Model)
    {
        <div class="media mt-4">
            <div class="img-circle">
                <img src=@item.UygulamaKullanıcısı.ResimYolu class="img-fluid" alt="...">
            </div>
            <div class="media-body">

                <ul class="time-rply mb-2">
                    <li>
                        <a href="#URL" class="name mt-0 mb-2 d-block">@item.UygulamaKullanıcısı.Adı</a>
                       @*  @item.YorumTarihi.ToShortDateString() *@
                        @item.YorumTarihi.ToString("dd-MMM-yyyy")
                    </li>
                    <li class="reply-last">
                        <a href="#reply" class="reply">
                            Reply
                        </a>
                    </li>
                </ul>
                <p>
                   @item.Yorumİçerik
                </p>
            </div>
        </div>
    }
    
</div>