@model List<UygulamaRolü>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayı = 0;
}




<h2>Rol Listesi</h2>
@if (Model.Count>0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Rol Adı</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                sayı++;
                <tr>
                    <td>@sayı</td>
                    <td>@item.Name</td>
                    <td><a href="/Admin/Rol/RolSil/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="/Admin/Rol/RolGüncelle/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                </tr>
            }


        </tbody>
    </table>
}
else
{
       <div class="alert alert-danger">
           <span>Rol bulunamadıı...</span>
       </div>
}
<br />
<a href="/Admin/Rol/RolEkle/" class="btn btn-outline-primary">Rol Ekle</a>




