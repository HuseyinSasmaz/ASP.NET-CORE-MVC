@model List<GeziRehberim.Areas.Admin.Models.ApiFilmViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api IMDB Film Listesi </h1>

<table class="table table-striped">
    <tr>
     <th>#</th>
    <th>Resim</th>
    <th>Film Adı</th>
    <th>IMDB Puanı</th>
    <th>Yapım Yılı</th>
    <th>Fragmanı İzle</th>
    </tr>
   @foreach (var item in Model)
    {
      <tr>
         <td>@item.Rank</td>
            <td><img src="@item.Thumbnail" width="100" height="100" /></td>
            <td>@item.Title</td>
            <td>@item.Rating</td>
            <td>@item.Year</td>
            <td>@item.Trailer</td>
            <td><a class="btn btn-outline-dark" href="#">Fragman</a></td>
      </tr>  
      
    }

</table>