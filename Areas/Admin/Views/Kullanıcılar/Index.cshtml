@model List<UygulamaKullanıcısı>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kullanıcı Listesi</h1>
<br />
<table class="table table-bordered"> 
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Düzenle</th>
        <th>Yorumlar</th>
        <th>Tur Geçmişi</th>
        
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Adı @item.Soyadı</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td><a class="btn btn-outline-danger" href="/Admin/Kullanıcılar/KullanıcıSil/@item.Id">Sil</a></td>
            <td><a class="btn btn-outline-warning" href="/Admin/Kullanıcılar/KullanıcıDüzenle/@item.Id">Düzenle</a></td>
            <td><a class="btn btn-outline-success" href="/Admin/Kullanıcılar/KullanıcıYorum/@item.Id">Yorumlar</a></td>
            <td><a class="btn btn-outline-secondary" href="/Admin/Kullanıcılar/KullanıcıRezervasyon/@item.Id">Tur Geçmişi</a></td>
        </tr>
    }      
</table>
<br />
<a href="/Giriş/KayıtOl/" class="btn btn-outline-primary">Yeni Kullanıcı Kaydı</a>